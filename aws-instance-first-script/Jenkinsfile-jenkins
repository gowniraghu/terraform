pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = 'ap-south-1'
        ENVIRONMENTS_PATH     = "aws-instance-first-script"
    }

    stages {
        stage('Checkout code') {
            steps {
                cleanWs()
                checkout scm
            }
        }

        stage('Check Terraform Version') {
            steps {
                script {
                    def tfhome = tool name: '1.6.4'
                    env.PATH = "${tfhome}:${env.PATH}"
                }
                sh "terraform --version"
            }
        }

        stage('Initialize Terraform') {
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }

        stage('Create Terraform Plan for Environment') {
            steps {
                script {
                    sh "cp ${ENVIRONMENTS_PATH}/aws-instance-example.tf aws-instance-example.tf"
                }
            }
        }

        stage('Apply Terraform Plan') {
            steps {
                script {
                    // Change to the directory where the Terraform files are located
                    dir("${ENVIRONMENTS_PATH}") {
                        // Run Terraform apply
                        sh "terraform apply -auto-approve
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace after the build
            cleanWs()
        }
    }
}
