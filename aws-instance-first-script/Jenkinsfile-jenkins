pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = 'ap-south-1'
        ENVIRONMENTS_PATH     = "aws-instance-first-script"
    }

    stages {
        stage('Checkout code') {
            steps {
                cleanWs()
                checkout scm
            }
        }

        stage('Create Terraform Plan for Environment') {
            steps {
                script {
                    sh "cp ${ENVIRONMENTS_PATH}/aws-instance-example.tf aws-instance-example.tf"

                    // Use the 'terraform' tool configured in Jenkins
                    def tfCmd = tool 'Terraform_0.14.5"'
                    sh "${tfCmd} get"
                }
            }
        }

        stage('Apply Terraform Plan') {
            steps {
                script {
                    // Use the 'terraform' tool configured in Jenkins
                    def tfCmd = tool 'terraform'
                    sh "${tfCmd} apply -auto-approve"
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace after the build
            cleanWs()
        }
    }
}
